{
  "name": "polotno",
  "version": "0.33.2",
  "description": "Design Editor Framework",
  "author": "Anton Lavrenov",
  "keywords": [
    "polotno",
    "canvas",
    "photo editor",
    "design editor"
  ],
  "dependencies": {
    "@blueprintjs/core": "^3.49.0",
    "@blueprintjs/popover2": "^0.11.3",
    "@blueprintjs/select": "^3.18.0",
    "@meronex/icons": "^4.0.0",
    "goober": "^2.0.41",
    "gradient-parser": "^1.0.2",
    "konva": "^8.1.3",
    "mobx": "6.3.3",
    "mobx-react-lite": "^3.2.1",
    "mobx-state-tree": "5.0.2",
    "nanoid": "^3.1.25",
    "react-color": "^2.19.3",
    "react-konva": "^17.0.2-5",
    "react-konva-utils": "0.2.0",
    "react-window": "^1.8.6",
    "swr": "^1.0.0",
    "use-image": "^1.0.8"
  },
  "main": "./polotno-app.js",
  "peerDependencies": {
    "react": "^17.0.2",
    "react-dom": "^17.0.2"
  },
  "size-limit": [
    {
      "path": "./lib/polotno-app.js",
      "limit": "395 KB"
    }
  ],
  "devDependencies": {
    "@size-limit/preset-app": "^5.0.3",
    "@size-limit/preset-big-lib": "^5.0.3",
    "@types/react": "^17.0.19",
    "parcel": "^2.0.0-rc.0",
    "react": "^17.0.2",
    "react-dom": "^17.0.2",
    "size-limit": "^5.0.3",
    "typescript": "^4.4.2",
    "uglifyjs-folder": "^3.0.0"
  },
  "homepage": "https://polotno.dev/",
  "scripts": {
    "start": "parcel index.html --no-source-maps",
    "clean": "rm -rf ./lib",
    "tsc": "tsc --outDir ./lib --removeComments --sourceMap false --module CommonJS || echo \"tsc faild for some file(s).\"",
    "minify": "uglifyjs-folder ./lib -eo ./lib -x .js",
    "build": "npm run clean && npm run tsc && npm run minify && cp ./package.json ./lib && cp ./README.md ./lib && cp ./LICENSE.md ./lib",
    "size": "npm run build && size-limit"
  },
  "license": "SEE LICENSE IN LICENSE.md"
}
